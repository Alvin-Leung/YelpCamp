<% include ../partials/header %>
    <div class="container">
        <h1 class="center-text">Edit Comment</h1>
        <div class="div-fixed-small">
            <form action="<%= "/campgrounds/" + campground._id + "/comments/" + comment._id + "?_method=PUT" %>" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" name="comment[text]" placeholder="text" value="<%= comment.text %>">
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-lg btn-primary btn-block">Save Changes</button>
                </div>
            </form>
            <a href="<%= "/campgrounds/" + campground._id %>">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>