<% include ../partials/header %>
    <div class="container">
        <header class="jumbotron">
            <h1><span class="glyphicon glyphicon-tent" aria-hidden="true"></span> Welcome To YelpCamp!</h1>
            <p>View our hand-picked campgrounds from all over the world</p>
            <p>
                <a href="/campgrounds/new" class="btn btn-lg btn-primary">Add New Campground</a>
            </p>
        </header>
        <div class="row text-center">
            <% campgrounds.forEach(function(campground) { %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%= campground.imageURL %>">
                        <div class="caption text-left">
                            <h4><a href="<%= "/campgrounds/" + campground._id %>"><%= campground.name %></a></h4>
                            <% for(var i=1; i<=5; i++) { %>
                                <% if(i<=campground.averageRating) { %>
                                    <span class="glyphicon glyphicon-star"></span>
                                <% } else { %>
                                    <span class="glyphicon glyphicon-star-empty"></span>
                                <% } %>
                            <% } %>
                            
                            <% if(campground.comments.length === 0) { %>
                                <a href="<%= "/campgrounds/" + campground._id + "/comments/new" %>" ><em class="missing-rating">Be the first to rate!</em></a>
                            <% } %>
                            <p><%= campground.description.substring(0,100) + "..." %></p>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
<% include ../partials/footer %>